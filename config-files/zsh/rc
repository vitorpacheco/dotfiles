setopt share_history
setopt hist_expire_dups_first
setopt hist_ignore_dups
setopt hist_verify
setopt auto_cd

# Ensure command hashing is off for mise
set +h

source ~/.config/zsh/envs
source ~/.config/zsh/ohmyzsh

# OS-specific configurations
if [[ "$OSTYPE" == "linux-gnu"* ]] && command -v lsb_release &> /dev/null && [[ $(lsb_release -is) == "Ubuntu" ]]; then
  source ~/.config/zsh/ubuntu
elif [[ "$OSTYPE" == "darwin"* ]]; then
  source ~/.config/zsh/macos
elif [[ -d ~/.local/share/omarchy ]]; then
  source ~/.config/zsh/omarchy
fi

source ~/.config/zsh/init
source ~/.config/zsh/aliases
source ~/.config/zsh/functions
source ~/.config/zsh/binds

# vi: ft=zsh
